{
  "name": "Metalet-mvc-wallet",
  "description": "A Browser Extension Wallet",
  "author": "showmoney",
  "version": "0.0.1",
  "manifest_version": 3,
  "content_security_policy": {
    "extension_pages": "script-src 'self';object-src 'self';style-src 'unsafe-inline' 'self';"
  },
  "host_permissions": [
		"https://api-mvc.metasv.com/",
		"http://api-mvc.metasv.com/",
		"https://www.showpay.top/",
		"http://www.showpay.top/"
	],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": [],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "*.png",
        "*.svg"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icons/16.png",
      "32": "/icons/32.png",
      "48": "/icons/48.png",
      "128": "/icons/128.png"
    }
  },
  "icons": {
    "16": "/icons/16.png",
    "32": "/icons/32.png",
    "48": "/icons/48.png",
    "128": "/icons/128.png"
  },
  "offline_enabled": true
}